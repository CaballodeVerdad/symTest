{% extends 'base.html.twig' %}

{% block title %}Inscripciones index{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('tables') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('tables') }}
{% endblock %}

{% block body %}
    <h1>Inscripciones index</h1>

    {% set columns = [
        { 'property': 'id', 'label': 'ID' },
        { 'property': 'idAlumno', 'label': 'ID Alumno' },
        { 'property': 'idExamen', 'label': 'ID Examen' }
    ] %}

    {% set actions = [
        { 
            'route': 'app_inscripciones_show', 
            'label': 'Ver', 
            'class': 'btn btn-info btn-sm',
            'params': { 'id': 'id' }
        },
        { 
            'route': 'app_inscripciones_edit', 
            'label': 'Editar', 
            'class': 'btn btn-warning btn-sm',
            'params': { 'id': 'id' }
        }
    ] %}


	{# log inscripciones #}
	{{ dump(inscripciones) }}

    {% include 'components/data-table.html.twig' with {
        'entities': inscripciones,
        'columns': columns,
        'actions': actions,
        'customClass': 'datatable-basic'
    } %}

    <a href="{{ path('app_inscripciones_new') }}" class="btn btn-primary">Crear nueva inscripci√≥n</a>
{% endblock %}
