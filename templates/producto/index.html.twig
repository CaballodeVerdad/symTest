    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>D:/Desarrollo UC/symTest/src/Controller/ProductoController.php</code></li>
        <li>Your template at <code>D:/Desarrollo UC/symTest/templates/producto/index.html.twig</code></li>
    </ul>
</div>

<div>
	<h2>Lista de Productos</h2>
	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Descripcion</th>
				<th>Size</th>
				<th>Precio</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
			<tr>
				<td>{{ product.id }}</td>
				<td>
					{# Esto irá a C:\Symfony\symTest\src\Controller\ProductoController.php #}
					<a href="{{ path('producto_mostrar', {'id': product.id}) }}">
						{{ product.name }}
					</a>
				</td>
				<td>{{ product.descripcion }}</td>
				<td>{{ product.size }}</td>
				<td>{{ product.precio }}</td>
			</tr>
			{% else %}
			<tr>
				<td colspan="6">No hay productos disponibles.</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
